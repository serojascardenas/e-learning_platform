{
	"env": {
		"browser": true,
		"es6": true,
    "amd": true,
    "node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12
	},
	"plugins": [
		"react"
	],
	"rules": {
		"object-curly-spacing": [
			"error", 
			"always"
		],
		"indent": [
			"warn",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"arrow-parens": [
			"warn", 
			"as-needed"
		],
		"comma-dangle": [
			"warn", 
			"always-multiline"
		],
		"no-unused-vars": 1
	}
}
